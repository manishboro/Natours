extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg A password reset link will be sent to your email
            form.form--forgotPassword
                .form__group
                    label.form__label(for='email') Email address
                    input#email-forgotPassword.form__input(type='email', placeholder='you@example.com', required)
                .form__group
                    button.btn.btn--green.btn--forgotPassword Send